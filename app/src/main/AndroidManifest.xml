<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medshub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedsHub">
        <activity
            android:name="medshub.activities.AddAddressActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.AddressActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.CartActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.ShowAllActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.DetailedActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.OnBoardingActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.RegistrationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="medshub.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name="medshub.activities.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>